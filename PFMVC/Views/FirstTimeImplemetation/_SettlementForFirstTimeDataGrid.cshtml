@model System.Collections.Generic.List<DLL.ViewModel.VM_Settlement_FirstTime>

@{
    ViewBag.Title = "Settlement Import";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-info"><strong>@TempData["shortMessage"]</strong> </div>

        @using (Html.BeginForm("SettelmentSubmit", "FirstTimeImplemetation", null, FormMethod.Post))
        {   
            @Html.AntiForgeryToken()
            <div id="update-message1" class="error"></div>

            <input type="hidden" name="_dtMonth" id="_dtMonth" />
            <table class="table table-striped smaller table-condensed" id="NotPro">
                <tr style="font-weight: bold; text-align: center">
                    <td>Employee ID</td>
                    <td>balance</td>
                    <td>Settlement Amount</td>
                    <td>Error Message</td>
                </tr>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => m[i].IdentificationNo) @Html.HiddenFor(m => m[i].IdentificationNo)</td>
                        <td>@Html.DisplayFor(m => m[i].Balance) @Html.HiddenFor(m => m[i].Balance)</td>
                        <td>@Html.DisplayFor(m => m[i].SettlementAmount) @Html.HiddenFor(m => m[i].SettlementAmount)</td>
                        <td style="color: red">@Html.DisplayFor(m => m[i].Message) @Html.HiddenFor(m => m[i].Message)</td>
                    </tr>
                }
            </table>
            <hr />
            <table class="pull-right" style="border: hidden">
                <tr>
                    <td>
                        @Html.ActionLink("Re-Upload", "Settlement", "FirstTimeImplemetation", new { @class = "btn btn-danger" })
                    </td>
                    <td>
                        <button type="submit" class="btn btn-success pull-right">Process only valid data</button>
                    </td>
                </tr>
            </table>
        }
    </div>
</div>


