@model List<DLL.tbl_Basic_Salary>

@{
    Layout = null;
}

<fieldset><legend>Contribution History</legend>
<strong>Employee ID: @ViewBag.EmpID</strong><br />
<strong>Employee Name: @ViewBag.EmpName</strong>
<br />
<br />
@if(Model.Count>0)
{
    <table class="table table-striped smaller">
        <tr><th>Contribution</th><th>Effective Date</th><th>Comment</th></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Basic.ToString("0.00")</td><td>@item.EffectiveDate</td><td>@item.Comment</td>
            </tr>
        }

    </table>
}
else
{
    <strong class="text-danger">No contribution history found!</strong>
}
      <div class="form-inline">
        
        <input type="button" class="btn btn-success btn-block btn-xs" value="Update Salary" onclick="UpdateSalary()"/>
    </div>
    </fieldset>