@model List<DLL.acc_Ledger>

@{
    ViewBag.Title = "_LedgerNameList";
    Layout = null;
}
@*Edited by Fahim 11/11/2015*@
<style>
    #scroller {
        width: 170px;
        height: 400px;
    }

    #inner {
        width: 100%;
        overflow-y: scroll;
        height: 100%;
        position:relative;
    }
</style>

@*End Fahim*@

<fieldset>
    <legend style="color: blue">@ViewBag.LegendName</legend>
    <div id="scroller">
        @*Edited by Fahim 11/11/2015*@
        <div id="inner">
            @*Edited by Fahim 11/11/2015*@
            
            <table class="table table-striped table-condensed LLT smaller" id="LLT" style="position:relative;top:0px;">

                @foreach (var item in Model)
                {
                    <tr id="@item.LedgerName-@item.LedgerCode">
                        <td class="can_be_selected">@item.LedgerName<span style="color: green">-@item.LedgerCode</span> </td>
                        <td class="hidden">@item.LedgerID</td>
                    </tr>
                }

            </table>
        </div>@*Edited by Fahim 11/11/2015*@
    </div>@*Edited by Fahim 11/11/2015*@
</fieldset>
