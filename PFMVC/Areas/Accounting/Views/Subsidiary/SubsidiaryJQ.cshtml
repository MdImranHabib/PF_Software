function FilterAccountHeadTable() {
    //InfoNotify("Key Press");
    index = -1;
    inp = $('#underGroup').val();

    //InfoNotify(inp);
    //This should ignore first row with th inside
    $("#GNL tr:not(:has(>th))").each(function () {
        if (~$(this).text().toLowerCase().indexOf(inp.toLowerCase())) {
