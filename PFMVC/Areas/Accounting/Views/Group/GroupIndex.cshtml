@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_AccountingMenu")
<div id="JQ" class="hidden"></div>

@section scripts{

    <script>
        $(document).ready(function () {
            GetGroupForm();
        })


        function GetGroupForm() {
            var viewUrl = rootPath + "/Accounting/Group/GroupForm/?GroupID=0";

            $.get(viewUrl, function (data) {
                $("#mainDiv").html("");
                $("#mainDiv").html(data);
                var viewUrl = rootPath + "/Accounting/Group/GetJQFile/";
                $.get(viewUrl, function (data) {
                    $("#JQ").html(data);
                })
            })

            var viewUrl = rootPath + "/Accounting/Group/GetGroupName/?filter=0&name=All";

            $.get(viewUrl, function (data) {
                $("#optionDiv").html('');
                $("#optionDiv").html(data);
            })


        }
    </script>
}
