            //$("#LedgerName").focus();
            var viewUrl = rootPath + "/Accounting/Ledger/LedgerForm/?LedgerID=00000000-0000-0000-0000-000000000000";

            $.get(viewUrl, function (data) {
                $("#mainDiv").html("");
                $("#mainDiv").html(data);
            });
            GetLedgerNameList();
        }
        else {
            $("#update-message1").html(data.ErrorMessage).addClass("alert alert-danger");
