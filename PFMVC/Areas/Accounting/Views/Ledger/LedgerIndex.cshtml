@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_AccountingMenu")
<div id="JQ" class="hidden"></div>

@section scripts{
    <script>
        $(document).ready(function () {


            var viewUrl = rootPath + "/Accounting/Ledger/LedgerForm/?LedgerID=00000000-0000-0000-0000-000000000000";

            $.get(viewUrl, function (data) {
                $("#mainDiv").html("");
                $("#mainDiv").html(data);

                var viewUrl = rootPath + "/Accounting/Ledger/GetJQFile";

                $.get(viewUrl, function (data) {
                    $("#JQ").html("");
                    $("#JQ").html(data);
                })

            })


            var viewUrl = rootPath + "/Accounting/Ledger/GetLedgerNameList/";
            $.get(viewUrl, function (data) {
                $("#optionDiv").empty();
                $("#optionDiv").html(data);
            })

            var viewUrl = rootPath + "/Accounting/Group/GetGroupName/";
            $.get(viewUrl, function (data) {
                $("#optionDiv2").empty();
                $("#optionDiv2").html(data);
                $("#optionDiv2").addClass("hidden");
                $(".editBtn").addClass("hidden");
            })

        })
    </script>
}
